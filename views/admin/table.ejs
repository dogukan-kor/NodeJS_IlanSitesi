<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>
    <%= pageTitle %>
  </title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="../../assets/vendors/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="../../assets/vendors/css/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- Plugin css for this page -->
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <!-- endinject -->
  <!-- Layout styles -->
  <link rel="stylesheet" href="../../assets/css/style.css">
  <!-- End layout styles -->
  <link rel="shortcut icon" href="../../assets/images/favicon.png" />
</head>

<body>
  <div class="container-scroller">

    <%- include('../includes/admin-navigation.ejs') %>

      <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Admin Listesi </h4>
                    <div class="table-responsive">
                      <% if (admins.length> 0) { %>
                        <table class="table">
                          <thead>
                            <tr>
                              <th>Adı</th>
                              <th>Soyadı</th>
                              <th>E_Posta</th>
                              <th></th>
                              <th></th>
                            </tr>
                          </thead>
                          <tbody>
                            <% for (let admin of admins) { %>
                              <tr>
                                <td>
                                  <%= admin.name %>
                                </td>
                                <td>
                                  <%= admin.surname %>
                                </td>
                                <td>
                                  <%= admin.email %>
                                </td>
                                <td><button class="btn badge-info">Düzenle</button></td>
                                <td><button class="btn badge-danger">Sil</button></td>

                              </tr>
                              <% } %>
                          </tbody>
                        </table>
                        <% } else { %>

                          <% } %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Dersler</h4>
                    <div class="table-responsive">
                      <% if (ilanlar.length> 0) { %>
                        <table class="table table-hover">
                          <thead>

                            <tr>
                              <th>İlan Adı</th>
                              <th>Pozisyon </th>
                              <th>İl</th>
                              <th>İlçe</th>
                              <th></th>
                              <th></th>
                            </tr>

                          </thead>
                          <tbody>
                            <% for (let ilan of ilanlar) { %>
                              <tr>
                                <td>
                                  <%= ilan.is_adi %>
                                </td>
                                <td>
                                  <%= ilan.pozisyon %>
                                </td>
                                <td>
                                  <%= ilan.il %>
                                </td>
                                <td>
                                  <%= ilan.ilce %>
                                </td>
                                <td><button class="btn badge-info">Düzenle</button></td>
                                <td><button class="btn badge-danger">Sil</button></td>
                              </tr>
                              <% } %>
                          </tbody>
                        </table>
                        <% } else { %>

                          <% } %>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">İş İlanları</h4>
                    </p>
                    <div class="table-responsive">
                      <table class="table table-dark">
                        <thead>
                          <tr>
                            <th> İlan İd </th>
                            <th> İlan Adı </th>
                            <th> Pozisyon </th>
                            <th> İl </th>
                            <th> İlçe </th>
                            <th></th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for (let ilan of ilanlar) { %>
                            <tr>
                              <td>
                                <%= ilan.id %>
                              </td>
                              <td>
                                <%= ilan.is_adi %>
                              </td>
                              <td>
                                <%= ilan.pozisyon %>
                              </td>
                              <td>
                                <%= ilan.il %>
                              </td>
                              <td>
                                <%= ilan.ilce %>
                              </td>
                              <form action="/ilan-duzenle" method="POST">
                              <input type="hidden" name="ilan_id" value="<%= ilan.id %>">
                              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                              <td><button name="islem" value="duzenle" class="btn badge-info">Düzenle</button></td>
                              <td><button name="islem" value="sil" class="btn badge-danger">Sil</button></td>
                              </form>
                            </tr>
                            <% } %>

                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Başvuran Kişi Listesi</h4>
                    <div class="table-responsive">
                      <% if (ilanlar.length> 0) { %>
                        <table class="table table-striped text-center">
                          <thead>
                            <tr>
                              <th>Fotoğraf</th>
                              <th>Adı Soyadı</th>
                              <th>Telefon</th>
                              <th>E-Posta</th>
                              <th>Ön Yazı</th>
                              <th>Özgeçmiş</th>
                              <th></th>
                            </tr>
                          </thead>
                          <tbody>
                            <% for (let bsvr of basvuran) { %>
                              <tr>
                                <td class="py-1">
                                  <img src="<%= bsvr.resim %>" alt="image" />
                                </td>
                                <td>
                                  <%= bsvr.ad_soyad %>
                                </td>
                                <td>
                                  <%= bsvr.telefon %>
                                </td>
                                <td>
                                  <%= bsvr.email %>
                                </td>
                                <td>
                                  <%= bsvr.on_yazi %>
                                </td>
                                <td> <a href="<%= bsvr.cv %>" target="_blank"><img src="images/cv.png" alt=""></a> </td>
                                <td>
                                  <form action="/basvuru-detay" method="POST">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <input type="hidden" name="ilan_id" value="<%= bsvr.ilanId %>">
                                    <input type="hidden" name="basvuran_id" value="<%= bsvr.id %>">
                                    <button class="btn badge-outline-primary">İncele</button>
                                  </form>
                                </td>
                              </tr>
                              <% } %>

                          </tbody>
                        </table>
                        <% } else { %>

                          <% } %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Ders İlerlemeleri</h4>
                    </p>
                    <div class="table-responsive">
                      <table class="table table-bordered">
                        <thead>
                          <tr>
                            <th> # </th>
                            <th> First name </th>
                            <th> Progress </th>
                            <th> Amount </th>
                            <th> Deadline </th>
                          </tr>
                        </thead>
                        <tbody>
