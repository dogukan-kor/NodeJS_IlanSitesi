<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>
    <%= pageTitle %>
  </title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="../../assets/vendors/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="../../assets/vendors/css/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- Plugin css for this page -->
  <link rel="stylesheet" href="../../assets/vendors/select2/select2.min.css">
  <link rel="stylesheet" href="../../assets/vendors/select2-bootstrap-theme/select2-bootstrap.min.css">
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <!-- endinject -->
  <!-- Layout styles -->
  <link rel="stylesheet" href="../../assets/css/style.css">
  <!-- End layout styles -->
  <link rel="shortcut icon" href="../../assets/images/favicon.png" />
</head>

<body>
  <div class="container-scroller">

    <%- include('../includes/admin-navigation.ejs') %>


      <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
          <% if (path=="/ilan-duzenle" ) { %>
            <div class="content-wrapper">
              <div class="page-header">
                <h3 class="page-title">Güncelleme İşlemi </h3>

              </div>
              <div class="row justify-content-around">
                <div class="col-10 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <h4 class="card-title">İş İlanı Düzenle</h4>
                      <form class="forms-sample" action="/ilan_Guncelle" method="POST">
                        <div class="form-group">
                          <label for="exampleInputName1">İş Adı</label>
                          <input type="text" class="form-control" name="is_adi" value="<%= ilan.is_adi %>">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputEmail3">Pozisyon</label>
                          <input type="text" class="form-control" name="pozisyon" value="<%= ilan.pozisyon %>">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputPassword4">il</label>
                          <input type="text" class="form-control" name="il" value="<%= ilan.il %>">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputPassword4">ilçe</label>
                          <input type="text" class="form-control" name="ilce" value="<%= ilan.ilce %>">
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" class="form-control" name="ilan_id" value="<%= ilan.id %>">
                       
                      </form>
                      <br> 
                      <!-- Kriter Ekleme -->
                      <h4 class="card-title">Kriter Ekle</h4>
                      <h6>(Birden fazla kriter ekleyeceksiniz iki kriter arasına virgül koyunuz.)</h6>
                      <br>
                      
                      <form class="forms-sample" action="/ilan_Guncelle" method="POST">
                        <div class="form-group">
                          <label for="exampleInputName1">Kriter</label>
                          <input type="text" class="form-control" name="kriter">
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Ekle</button>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" class="form-control" name="ilan_id" value="<%= ilan.id %>">

                      </form>
                      <!-- İş Tanımı -->
                      <br>
                      
                      <h4 class="card-title">İş Tanım Ekle</h4>
                      <h6>(Birden fazla kriter ekleyeceksiniz iki tanım arasına virgül koyunuz.)</h6>
                      <br>
                      
                      <form class="forms-sample" action="/ilan_Guncelle" method="POST">
                        <div class="form-group">
                          <label for="exampleInputName1">İş Tanımı</label>
                          <input type="text" class="form-control" name="is_tanim">
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Ekle</button>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" class="form-control" name="ilan_id" value="<%= ilan.id %>">

                      </form>

                      <hr>
                        <div class="content-wrapper">
                          <h3>İş Tanım</h4>
                          <% for (let tnm of is_tanims) { %>

                            <div class="row ">

                              <div class="col-lg-12 grid-margin stretch-card ">
                                <div class="card">
                                  <div class="card-body">
                                    <div class="table-responsive">
                                      <%= tnm.tanim %>
                                      <form action="/admin-duzenle" method="POST">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                       
                                        <button name="islem" value="düzenle" class="btn badge-info">Düzenle</button>
                                        <button name="islem" value="sil" class="btn badge-danger">Sil</button>

                                      </form>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <% } %>
                        </div>
                        <hr>
                        <div class="content-wrapper">
                          <h3>Kriter</h4>
                          <% for (let krt of kriter) { %>

                            <div class="row ">

                              <div class="col-lg-12 grid-margin stretch-card ">
                                <div class="card">
                                  <div class="card-body">
                                    <div class="table-responsive">
                                      <%= krt.kriter %>
                                      <form action="/admin-duzenle" method="POST">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                        <button name="islem" value="düzenle" class="btn badge-info">Düzenle</button>
                                        <button name="islem" value="sil" class="btn badge-danger">Sil</button>

                                      </form>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                            <% } %>
                        </div>

                      
                    </div>
                  </div>
                </div>
              </div>

            </div>
            <% } else { %>
            <!--dasda-->

            <div class="content-wrapper">
              <div class="page-header">
                <h3 class="page-title"> İlan Ekleme</h3>

              </div>
              <div class="row justify-content-around">
                <div class="col-10 grid-margin stretch-card">
                  <div class="card">
                    <div class="card-body">
                      <h4 class="card-title">İş İlanı Ekle</h4>
                      <form class="forms-sample" action="/ilan_Ekle" method="POST">
                        <div class="form-group">
                          <label for="exampleInputName1">İş Adı</label>
                          <input type="text" class="form-control" name="is_adi">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputEmail3">Pozisyon</label>
                          <input type="text" class="form-control" name="pozisyon">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputPassword4">il</label>
                          <input type="text" class="form-control" name="il">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputPassword4">ilçe</label>
                          <input type="text" class="form-control" name="ilce">
                        </div>
                        <div class="form-group">
                          <label for="exampleTextarea1">iş Tanımı</label>
                          <textarea class="form-control" name="is_tanim" rows="4"></textarea>
                        </div>
                        <div class="form-group">
                          <label for="exampleTextarea1">Aranılan Kriterler</label>
                          <textarea class="form-control" name="kriter" rows="4"></textarea>
                        </div>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-primary mr-2">İlan Ekle</button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>




            </div>
            <% } %>


              <!-- content-wrapper ends -->
              <!-- partial:../../partials/_footer.html -->
              <footer class="footer">
                <div class="d-sm-flex justify-content-center justify-content-sm-between">
                  <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright ©
                    bootstrapdash.com 2020</span>
                  <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a
                      href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin
                      templates</a> from Bootstrapdash.com</span>
                </div>
              </footer>
              <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>

      <!-- ddsadsa dogus -->




      <!-- page-body-wrapper ends -->
  </div>




  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="../../assets/vendors/js/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- Plugin js for this page -->
  <script src="../../assets/vendors/select2/select2.min.js"></script>
  <script src="../../assets/vendors/typeahead.js/typeahead.bundle.min.js"></script>
  <!-- End plugin js for this page -->
  <!-- inject:js -->
  <script src="../../assets/js/off-canvas.js"></script>
  <script src="../../assets/js/hoverable-collapse.js"></script>
  <script src="../../assets/js/misc.js"></script>
  <script src="../../assets/js/settings.js"></script>
  <script src="../../assets/js/todolist.js"></script>
  <!-- endinject -->
  <!-- Custom js for this page -->
  <script src="../../assets/js/file-upload.js"></script>
  <script src="../../assets/js/typeahead.js"></script>
  <script src="../../assets/js/select2.js"></script>
  <!-- End custom js for this page -->
</body>

</html>