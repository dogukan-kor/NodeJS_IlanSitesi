<body>
  <div class="container-scroller">

    <%- include('../includes/admin-navigation.ejs') %>

      <div class="container-fluid page-body-wrapper">
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
             
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title"><%= baslik %></h4>
                    </p>
                    <div class="table-responsive">
                      <table class="table table-dark">
                        <thead>
                          <tr>
                            <th> İlan İd </th>
                            <th> İlan Adı </th>
                            <th> Pozisyon </th>
                            <th> İl </th>
                            <th> İlçe </th>
                            <% if (path=="/ilan") { %>
                            <th></th>
                            <th></th>
                            <th></th>
                            <% } else { %>
                              <th></th>
                            <%  } %>
                          </tr>
                        </thead>
                        <tbody>
                          <% for (let ilan of ilanlar) { %>
                            <tr>
                              <td>
                                <%= ilan.id %>
                              </td>
                              <td>
                                <%= ilan.is_adi %>
                              </td>
                              <td>
                                <%= ilan.pozisyon %>
                              </td>
                              <td>
                                <%= ilan.il %>
                              </td>
                              <td>
                                <%= ilan.ilce %>
                              </td>
                              <form action="/ilan-duzenle" method="POST">
                              <input type="hidden" name="ilan_id" value="<%= ilan.id %>">
                              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                              <% if (path=="/ilan") { %>
                              <td><button name="islem" value="duzenle" class="btn badge-info">Düzenle</button></td>
                              <td><button name="islem" value="sil" class="btn badge-danger">Sil</button></td>
                              <td><button name="islem" value="askı" class="btn badge-outline-primary">Askıya Al</button></td>
                              <% } else { %>
                                <td><button name="islem" value="aktif" class="btn badge-outline-primary">Aktif Hale Getir</button></td>
                                <% } %>
                              </form>
                              
                            </tr>
                            <% } %>

                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
         </div>
          </div>
          <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
              <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © bootstrapdash.com
                2020</span>
              <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"> Free <a
                  href="https://www.bootstrapdash.com/bootstrap-admin-template/" target="_blank">Bootstrap admin
                  templates</a> from Bootstrapdash.com</span>
            </div>
          </footer>
